{
  "name": "nexus",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "echo \"No test suite.\" && exit 0",
    "lint": "eslint --cache .",
    "format": "prettier --check .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.11",
    "@heroicons/react": "^2.0.15",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-avatar": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@sentry/nextjs": "^7.58.1",
    "@tanstack/react-query": "^4.29.19",
    "@tanstack/react-query-devtools": "^4.29.25",
    "class-variance-authority": "^0.7.0",
    "clsx": "^1.2.1",
    "dayjs": "^1.10.7",
    "dotenv": "^16.3.1",
    "fathom-client": "^3.5.0",
    "lodash": "^4.17.21",
    "next": "^13.1.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-use": "^17.4.0",
    "react-wrap-balancer": "^1.0.0",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "^3.0.15",
    "tailwindcss-animate": "^1.0.6"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "eslint": "^8.45.0",
    "eslint-config-next": "^13.4.10",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-lodash": "^7.3.0",
    "eslint-plugin-only-error": "^1.0.2",
    "eslint-plugin-unicorn": "^48.0.0",
    "husky": "^7.0.0",
    "postcss": "^8.3.11",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0"
  },
  "volta": {
    "node": "18.14.0"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write .",
      "eslint --cache --fix ."
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "node": true,
      "es2022": true
    },
    "extends": [
      "plugin:import/recommended",
      "plugin:lodash/canonical",
      "plugin:unicorn/recommended",
      "next",
      "prettier"
    ],
    "plugins": [
      "import",
      "lodash",
      "only-error",
      "unicorn"
    ],
    "rules": {
      "import/order": "error",
      "lodash/prefer-lodash-method": "off",
      "lodash/prefer-lodash-typecheck": "off",
      "unicorn/no-null": "off",
      "unicorn/prefer-module": "off",
      "unicorn/prevent-abbreviations": [
        "error",
        {
          "allowList": {
            "param": true,
            "params": true,
            "Prop": true,
            "Props": true,
            "prop": true,
            "props": true,
            "e": true,
            "el": true,
            "Ref": true,
            "ref": true,
            "req": true,
            "res": true
          }
        }
      ]
    },
    "settings": {
      "import/resolver": {
        "alias": {
          "map": [
            [
              "@/components",
              "./src/components/"
            ],
            [
              "@/hooks",
              "./src/hooks/"
            ],
            [
              "@/lib",
              "./src/lib/"
            ],
            [
              "@/pages",
              "./src/pages/"
            ]
          ],
          "extensions": [
            ".js"
          ]
        }
      }
    }
  },
  "prettier": {
    "editorconfig": true,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  }
}
